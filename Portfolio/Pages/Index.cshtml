@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container-fluid">
    <!--Start Landing page-->
    <div class="row">
        <div class="col-md-5">
            <img class="img-fluid" src="~/images/Arnold.png" />
          
        </div>
