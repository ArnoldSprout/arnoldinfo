            </div>
            <a class="btn btn-danger text-white" href="https://www.youtube.com/channel/UCDjT8Mpx4vOe-HrA1EakzhQ">YouTube Channel</a>
        </div>
        <div class="col-md-4 text-center">
            <img class="img-fluid" src="~/images/Arnold-2.png" />
        </div>
    </div>
    
<!--End Intro about me-->

<!--Start projects-->
    
        <h1 class="project-title">some cool project</h1><br />
        <form method="get">
            <div class="form-group">
                <div class="input-group">
                    <input type="search" class="form-control" placeholder="Search project by title e.g. quize" asp-for="SearchQuery" />
                    <button type="submit" class="btn-group-sm">Search</button>
                </div>
               
            </div>
        </form>

    <div class="row text-center py-2">
     
            <div class="col-md-2">
                <h4>Title</h4>
            </div>
            <div class="col-md-2">
                <h4>Language</h4>
            </div>
            <div class="col-md-4">
                <h4>Discription</h4>
            </div>
            <div class="col-md-4">
                <h4>Project link</h4>
            </div>
       
    </div>
    @foreach (var project in Model.Project_)
            {
                <div class="row text-center">
                        <div class="col-md-2">
                            <p class="project-title-2">@project.Title</p>
                        </div>
                        <div class="col-md-2">
                            <p>@project.Type</p>
                        </div>
                        <div class="col-md-4">
                            <p>@project.Discription</p>
                        </div>
                        <div class="col-md-4">
                            <a href="@project.Link">Go to Link</a>
                        </div>
                   
                </div>
            }
  
    <!--End Projects-->
    <!--Start Contact-->
